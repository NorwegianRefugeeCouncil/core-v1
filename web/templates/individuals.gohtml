                                        data-bs-target="#deleteIndividualsConfirmationModal"
                                        data-toggle="tooltip" data-placement="top" title="Delete selected individuals"
                                        onclick="refreshDeleteConfirmationModal()"
                                        id="deleteButton"
                                    >
                                        <i class="bi bi-trash me-2"></i>
                                        <span id="deleteIndividualsButtonContent">Delete individuals</span>
                                    </li>
                                    <li class="list-group-item"
                                        onclick="submitActionForm('deactivate')"
                                        data-toggle="tooltip" data-placement="top" title="Deactivate selected individuals"
                                        id="deactivateButton"
                                    >
                                        <i class="bi bi-eye-slash-fill me-2"></i>
                                        <span id="deactivateIndividualsButtonContent">Deactivate individuals</span>
                                    </li>
                                    <li class="list-group-item"
                                        onclick="submitActionForm('activate')"
                                        data-toggle="tooltip" data-placement="top" title="Activate selected individuals"
                                        id="activateButton"
                                    >
                                        <i class="bi bi-eye me-2"></i>
                                        <span id="activateIndividualsButtonContent">Activate individuals</span>
                                    </li>
                                </ul>
                            </div>
