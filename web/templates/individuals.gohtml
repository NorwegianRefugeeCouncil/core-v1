                                <i class="bi bi-three-dots-vertical cursor-pointer"
                                   id="action-menu-trigger"
                                   data-bs-target="#action-menu__list"
                                   data-bs-toggle="collapse"></i>
                                <ul id="action-menu__list" class="list-group collapse flex-grow-0">
