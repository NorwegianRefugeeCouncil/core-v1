{{define "head"}}
{{end}}
{{define "body"}}
    <header class="sticky-top">
        {{template "nav" .}}
    </header>
    <main class="container mt-3">
        <h1 class="my-4">
            {{if .Country.ID}}
                {{.Country.Name}}
            {{else}}
                New Country
            {{end}}
        </h1>
        <form method="post" action="/countries/{{if eq "" .Country.ID}}new{{else}}{{.Country.ID}}{{end}}">
            <div class="card">
                        <div class="card-header">
                            Country details
                        </div>
                        <div class="card-body list-group list-group-flush pt-2">
                            <!-- ID -->
                            {{if .Country.ID}}
                                <div class="form mb-3">
                                    <label for="ID" class="form-label">ID</label>
                                    <input id="ID" disabled="disabled" name="ID"
                                           class="form-control font-monospace"
                                           value="{{.Country.ID}}" readonly="readonly">
                                </div>
                            {{end}}
                            <!-- End of ID -->

                            <!-- Name -->
                            <div class="form mb-3">
                                <label for="Name" class="form-label">Name</label>
                                <input id="Name" name="Name" class="form-control"
                                       value="{{.Country.Name}}">
                            </div>
                            <!-- End of Name -->

                            <!-- Code -->
                            <div class="form mb-3">
                                <label for="Code" class="form-label">Code</label>
                                <input id="Code" name="Code" class="form-control font-monospace"
                                       value="{{.Country.Code}}">
                            </div>
                            <!-- End of Code -->

                            <!-- NRC Organisation -->
                            <div class="form mb-3">
                                <label id="NrcOrganisationsLabel"
                                       for="NrcOrganisations"
                                       class="form-label">
                                    NRC Organisation
                                </label>
                                <input id="NrcOrganisations"
                                       name="NrcOrganisations"
                                       class="form-control"
                                       aria-describedby="NrcOrganisationsHelp"
                                       aria-labelledby="NrcOrganisationsLabel"
                                       value="{{.Country.NrcOrganisations}}">
                                <div class="form-text"
                                     id="NrcOrganisationsHelp">
                                        The NRC Organisation that this country is associated with.
                                        Users that belong to this NRC Organisation will be able to access this country's
                                        data.
                                    <br>
                                    If you want to enter multiple NRC Organisations, please separate them with a comma, <b>without adding extra spaces</b>.
                                    <br>
                                    Example: <code>NRC Organisation1,NRCOrganisation2</code>
                                </div>
                            </div>
                            <!-- End of NRC Organisation -->
                        </div>
                        <div class="card-footer">
                            <button class="btn btn-primary" type="submit">Save</button>
                        </div>
                    </div>
        </form>
    </main>

{{end}}